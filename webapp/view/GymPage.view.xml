    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
	height="100%"
	class="side-navigation-demo">
    
    <Page id="page" title="Gym and Fitness" showHeader="false" enableScrolling="true">
        <mvc:XMLView viewName="decathlon.view.TitleBar"/>
