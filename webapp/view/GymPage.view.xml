<mvc:View controllerName="decathlon.controller.GymPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
	height="100%"
	class="side-navigation-demo">
    
    <Page id="page" title="Gym and Fitness" showHeader="false" enableScrolling="false">
        <mvc:XMLView viewName="decathlon.view.TitleBar"/>
         <!-- <content>
			<ComboBox>
                <core:Item  text="Dumbells" />
                <core:Item  text="Iron weighted plates" />
                <core:Item  text="Rubber weighted plates" />
                <core:Item  text="Kettlebells" />
                <core:Item  text="Smith Machine" />
                <core:Item  text="Leg Press Machine" />
                <core:Item  text="Chest Press Machine" />
                <core:Item  text="Lat Pulldown Machine" />
                <core:Item  text="Cable Crossover Machine" />
                <core:Item  text="Seated Row Machine" />
                <core:Item  text="Leg Extension / Curl Machine" />
                <core:Item  text="Preacher Curl Bench" />
                <core:Item  text="Power Rack / Squat Rack" />
			</ComboBox>
		</content> -->
        	<l:Splitter height="100%" width="100%">
    <!-- Left Side: Category List -->
    <VBox width="100%">
        <List mode="SingleSelectMaster">
            <items>
                <StandardListItem  title="Dumbells" />
                <StandardListItem  title="Iron weighted plates" />
                <StandardListItem  title="Rubber weighted plates" />
                <StandardListItem  title="Kettlebells" />
                <StandardListItem  title="Smith Machine" />
                <StandardListItem  title="Leg Press Machine" />
                <StandardListItem  title="Chest Press Machine" />
                <StandardListItem  title="Lat Pulldown Machine" />
                <StandardListItem  title="Cable Crossover Machine" />
            </items>
        </List>
        <VBox class="sapUiSmallMargin">
 
<Title text="Price" level="H5" />
<HBox>
<Input value="799" width="100px" />
<Text text=" To " class="sapUiSmallMarginBeginEnd"/>
<Input  value="9999" width="100px" />
</HBox>
<!-- <Slider   min="799" max="9999" /> -->

<Title text="Category" level="H5" class="sapUiSmallMarginTop"/>
<SearchField placeholder="Search..." width="100%"/>
<VBox>
<CheckBox text="Dumbells" />
<CheckBox text="Kettlebells" />
<CheckBox text="Barbells" />
</VBox>

<Title text="Size" level="H5" class="sapUiSmallMarginTop"/>
<SearchField placeholder="Search size..." width="100%"/>
<ScrollContainer height="200px" vertical="true">
<VBox>
<CheckBox text="5 kg" />
<CheckBox text="7.5 kg" />
<CheckBox text="10 kg" />
<CheckBox text="12.5 kg" />
<CheckBox text="15 kg" />
<CheckBox text="20 kg" />
<CheckBox text="25 kg" />
<CheckBox text="30 kg" />
<CheckBox text="35 kg" />
<CheckBox text="40 kg" />
</VBox>
</ScrollContainer>
            </VBox>
        <layoutData>
            <l:SplitterLayoutData size="20%" />
        </layoutData>
    </VBox>

    <!-- <ScrollContainer width="100%" height="100%"   class="container" > -->
    <VBox class="container">
        <layoutData>
            <l:SplitterLayoutData size="80%" />
        </layoutData>

       <FlexBox justifyContent="SpaceAround" items="{products>/Products}">
    <VBox width="300px" class="sapUiSmallMargin gympagebox">
        <Carousel height="200px" width="100%">
            <!-- <items> -->
                <Image src="{products>images/0}" />
                <Image src="{products>images/1}" />
            <!-- </items> -->
        </Carousel>

        <HBox justifyContent="SpaceBetween">
            <ObjectStatus text="{products>rating}" icon="sap-icon://favorite" state="Success"/>
            <Button icon="sap-icon://heart-2" type="Transparent" press="onPressWishlist"/>
        </HBox>

        <Text text="{products>name}" />
        <Text text="{products>description}" maxLines="2" wrapping="true" />

        <HBox alignItems="Center">
            <ObjectNumber number="{products>price}" unit="{products>currency}" emphasized="true"/>
        </HBox>
        <Button text="ADD TO CART" press="onPressAddToCart" class="sapUiSmallMarginTop"/>
    </VBox>
</FlexBox>
</VBox>
    <!-- </ScrollContainer> -->
</l:Splitter>
    </Page>
</mvc:View>