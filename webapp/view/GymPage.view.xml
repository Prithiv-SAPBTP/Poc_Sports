        <VBox class="sapUiSmallMargin">
<Title text="Filters" level="H6" class="sapUiSmallMarginTop"/>
<VBox>
<CheckBox text="Dumbells" />
<CheckBox text="Iron weighted plates" />
<CheckBox text="Rubber weighted plates" />
<CheckBox text="Kettlebells" />
<CheckBox text="Smith Machine" />
<CheckBox text="Leg Press Machine" />
<CheckBox text="Chest Press Machine" />
<CheckBox text="Lat Pulldown Machine" />
<CheckBox text="Cable Crossover Machine" />
</VBox>
</VBox>
        <VBox class="sapUiSmallMargin">
 
<Title text="Price" level="H5" />
<HBox>
<Input value="799" />
<Text text=" To " class="sapUiSmallMarginBeginEnd"/>
<Input  value="9999" />
</HBox>
<!-- <Slider   min="799" max="9999" /> -->

<Title text="Category" level="H5" class="sapUiSmallMarginTop"/>
<!-- <SearchField placeholder="Search..." width="100%"/> -->
<VBox>
<CheckBox text="Dumbells" />
<CheckBox text="Kettlebells" />
<CheckBox text="Barbells" />
</VBox>

<Title text="Size" level="H5" class="sapUiSmallMarginTop"/>
<SearchField placeholder="Search size..."/>
<ScrollContainer height="200px" vertical="true" >
<VBox>
<CheckBox text="5 kg" />
<CheckBox text="7.5 kg" />
<CheckBox text="10 kg" />
