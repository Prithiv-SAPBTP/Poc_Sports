        	<l:Splitter height="100%" width="100%">
    <!-- Left Side: Category List -->
    <VBox width="100%">
        <List mode="SingleSelectMaster">
            <items>
                <StandardListItem  title="Dumbells" />
                <StandardListItem  title="Iron weighted plates" />
                <StandardListItem  title="Rubber weighted plates" />
                <StandardListItem  title="Kettlebells" />
                <StandardListItem  title="Smith Machine" />
                <StandardListItem  title="Leg Press Machine" />
                <StandardListItem  title="Chest Press Machine" />
                <StandardListItem  title="Lat Pulldown Machine" />
                <StandardListItem  title="Cable Crossover Machine" />
            </items>
        </List>
        <VBox class="sapUiSmallMargin">
 
<Title text="Price" level="H5" />
<HBox>
<Input value="799" width="100px" />
<Text text=" To " class="sapUiSmallMarginBeginEnd"/>
<Input  value="9999" width="100px" />
</HBox>
<Slider   min="799" max="9999" />

<Title text="Category" level="H5" class="sapUiSmallMarginTop"/>
<SearchField placeholder="Search..." width="100%"/>
<VBox>
<CheckBox text="Dumbells" />
<CheckBox text="Kettlebells" />
<CheckBox text="Barbells" />
</VBox>

<Title text="Size" level="H5" class="sapUiSmallMarginTop"/>
<SearchField placeholder="Search size..." width="100%"/>
<ScrollContainer height="200px" vertical="true">
<VBox>
<CheckBox text="5 kg" />
<CheckBox text="7.5 kg" />
<CheckBox text="10 kg" />
<CheckBox text="12.5 kg" />
<CheckBox text="15 kg" />
<CheckBox text="20 kg" />
<CheckBox text="25 kg" />
<CheckBox text="30 kg" />
<CheckBox text="35 kg" />
<CheckBox text="40 kg" />
</VBox>
</ScrollContainer>
            </VBox>
        <layoutData>
            <l:SplitterLayoutData size="20%" />
        </layoutData>
    </VBox>

    <ScrollContainer width="100%" height="100%" vertical="true" horizontal="false" class="container">
        <layoutData>
            <l:SplitterLayoutData size="80%" />
        </layoutData>

        <FlexBox wrap="Wrap" justifyContent="SpaceAround">
            <!-- Dumbbells -->
            <VBox width="300px" class="sapUiSmallMargin gympagebox">
                <Carousel height="200px" width="100%">
                    <Image src="img/dumbbells1.jpg" />
                    <Image src="img/dumbbells2.jpg" />
                </Carousel>

                <HBox justifyContent="SpaceBetween">
                    <ObjectStatus text="4.6" icon="sap-icon://favorite" state="Success"/>
                    <Button icon="sap-icon://heart-2" type="Transparent" press="onPressWishlist"/>
                </HBox>

                <Text text="Dumbbells" />
                <Text text="Best selling Dumbbells with Rack" maxLines="2" wrapping="true" />

                <HBox alignItems="Center">
                    <ObjectNumber number="2499" unit="₹" emphasized="true"/>
                </HBox>
                <Button text="ADD TO CART" press="onPressAddToCart" class="sapUiSmallMarginTop"/>
            </VBox>

            <!-- Skipping Rope -->
            <VBox width="300px" class="sapUiSmallMargin gympagebox">
                <Carousel height="200px" width="100%">
                    <Image src="img/skippingrope1.jpg" />
                    <Image src="img/skippingrope2.webp" />
                </Carousel>

                <HBox justifyContent="SpaceBetween">
                    <ObjectStatus text="4.2" icon="sap-icon://favorite" state="Success"/>
                    <Button icon="sap-icon://heart-2" type="Transparent" press="onPressWishlist"/>
                </HBox>

                <Text text="Skipping Rope" />
                <Text text="Premium Quality Skipping Rope"/>

                <HBox alignItems="Center">
                    <ObjectNumber number="199" unit="₹" emphasized="true"/>
                </HBox>
                <Button text="ADD TO CART" press="onPressAddToCart" class="sapUiSmallMarginTop"/>
            </VBox>

            <!-- Gym Bags -->
            <VBox width="300px" class="sapUiSmallMargin gympagebox">
                <Carousel height="200px" width="100%">
                    <Image src="img/Gymbags.jpg" />
                    <Image src="img/Gymbags1.jpg" />
                </Carousel>

                <HBox justifyContent="SpaceBetween">
                    <ObjectStatus text="4.8" icon="sap-icon://favorite" state="Success"/>
                    <Button icon="sap-icon://heart-2" type="Transparent" press="onPressWishlist"/>
                </HBox>

                <Text text="Gym Bags" />
                <Text text="Spacious and stylish Gym Bag" />

                <HBox alignItems="Center">
                    <ObjectNumber number="1299" unit="₹" emphasized="true"/>
                </HBox>
                <Button text="ADD TO CART" press="onPressAddToCart" class="sapUiSmallMarginTop"/>
            </VBox>

             <!-- Dumbbells -->
            <VBox width="300px" class="sapUiSmallMargin gympagebox">
                <Carousel height="200px" width="100%">
                    <Image src="img/dumbbells1.jpg" />
                    <Image src="img/dumbbells2.jpg" />
                </Carousel>

                <HBox justifyContent="SpaceBetween">
                    <ObjectStatus text="4.6" icon="sap-icon://favorite" state="Success"/>
                    <Button icon="sap-icon://heart-2" type="Transparent" press="onPressWishlist"/>
                </HBox>

                <Text text="Dumbbells" />
                <Text text="Best selling Dumbbells with Rack" maxLines="2" wrapping="true" />

                <HBox alignItems="Center">
                    <ObjectNumber number="2499" unit="₹" emphasized="true"/>
                </HBox>
                <Button text="ADD TO CART" press="onPressAddToCart" class="sapUiSmallMarginTop"/>
            </VBox>
        </FlexBox>
    </ScrollContainer>
</l:Splitter>
    </Page>
</mvc:View>