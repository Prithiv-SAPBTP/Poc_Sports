<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="cartDialog" title="Add To Cart" class="sapUiContentPadding" draggable="true" resizable="true">

        <VBox class="sapUiMediumMargin">
            <HBox justifyContent="Center">
                <Image src="img/dumbbells1.jpg" width="300px" height="200px"/>
            </HBox>

            <Label text="Product Name" design="Bold" class="sapUiSmallMarginTop"/>
            <Input value="Best selling Dumbells" editable="false"/>

            <HBox>
                
                <VBox>
                    <Label text="Quantity"/>
                    <HBox width="40%">
                        <StepInput min="1" max="3"/>
                    </HBox>
                </VBox>
                <VBox>
                    <Label text="MRP"/>
                    <Input value="2499" editable="false"/>
                </VBox>
            </HBox>
        </VBox>

        <beginButton>
            <Button text="Click to Purchase"  type="Accept" icon="sap-icon://credit-card" />
        </beginButton>
        <endButton>
            <Button text="Cancel" type="Reject" icon="sap-icon://decline" press="onCloseCart"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>

