        </f:SimpleForm>
         <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            adjustLabelSpan="true"
           >
        
 <!-- <VBox id="seqSection" class="sapUiSmallMarginTop"> -->

            <!-- <Toolbar>
                <Title text="SEQ" level="H2" />
            </Toolbar> -->

            <Toolbar>
                <RadioButtonGroup columns="2" selectedIndex="0" select=".onRadioSelect">
                    <buttons>
                        <RadioButton text="Manual Selection" />
                        <RadioButton text="Excel Upload" />
                    </buttons>
                </RadioButtonGroup>

                <HBox id="uploadBox" class="sapUiSmallMargin" visible="false">
                    <Button icon="sap-icon://upload" text="UPLOAD" />
                </HBox>
            </Toolbar>

          

            <Table
                id="itemsTable" items="{products>/po}"
                inset="false"
                growing="true">

                <headerToolbar>
                    <Toolbar>
                        <Title text="Items" level="H3" />
                        <ToolbarSpacer />
                        <Button text="Add Item" type="Emphasized" icon="sap-icon://add" press="onAddItem" />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column demandPopin="true" ><Text text="Seq" /></Column>
                    <Column><Text text="Material" /></Column>
                    <Column><Text text="Quantity" /></Column>
                    <Column demandPopin="true" ><Text text="In Stock" /></Column>
                    <Column demandPopin="true" ><Text text="ETA" /></Column>
                    <Column demandPopin="true" ><Text text="MSRP" /></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Input value="{products>seq}" type="Number"/>
                            <Input value="{products>material}"/>
                            <Input value="{products>quantity}" type="Number"/>
                            <ObjectStatus state="{products>stockState}" text="{products>inStock}" />
                            <Input value="{products>eta}"/>
                            <Input value="{products>msrp}"/>
                            <Input value="{products>dealerPrice}"/>
                            <Input value="{products>vat}"/>
                            <Input value="{products>amount}"/>

                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
