<mvc:View
    controllerName="decathlon.controller.Purchase"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:mdc="sap.ui.mdc"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <mvc:XMLView viewName="decathlon.view.TitleBar" />
    <Page id="createPage" title="Create New Purchase Order">

        <f:SimpleForm
            id="purchaseForm"
            editable="true"
            layout="ResponsiveGridLayout"
            adjustLabelSpan="true">

          <layout:Grid  >
 
        <!-- 1st Column -->
        <VBox alignItems="Start" justifyContent="Center" >
            <HBox>
                <Label width="120px" textAlign="End" text="Purchase Type" required="true" showColon="true" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
                <Select width="150px">
                    <core:Item />
                </Select>
            </HBox>
            <HBox >
                <Label width="120px" textAlign="End" text="Ship to Party" required="true" showColon="true" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
                <Select width="150px">
                    <core:Item />
                </Select>
            </HBox>
            <HBox>
                <Label width="120px" textAlign="End" text="Address" showColon="true" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
                <TextArea value="" rows="3" growing="true" growingMaxLines="6" width="150px" editable="true"
                          placeholder=""/>
            </HBox>
        </VBox>
 
        <!-- 2nd Column -->
        <VBox alignItems="Start" justifyContent="Start">
            <HBox>
                <Label width="120px" textAlign="End" text="Payment Type" showColon="true" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <Select width="150px">
                    <core:Item />
                </Select>
            </HBox>
            <HBox>
                <Label width="120px" labelFor="dealerRefField" required="true" textAlign="End"
                       text="Dealer Ref No" showColon="true" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <Input width="150px" id="dealerRefField" placeholder="" required="true"/>
            </HBox>
            <HBox>
                <Label width="120px" labelFor="poRefField" textAlign="End"
                       text="PO Ref Date" showColon="true" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <DatePicker id="DP2" width="150px"
                    value="{
                        'path':'',
                        'type':'sap.ui.model.type.Date',
                        'formatOptions': {
                            'pattern': 'yyyy-MM-dd'
                        }
                    }"
                    class="sapUiSmallMarginBottom"/>
            </HBox>
        </VBox>
        <layout:Grid>
        </layout:Grid>
        <!-- 3rd Column -->
        <VBox alignItems="Start" justifyContent="Start">
            <HBox>
                <Label width="120px" textAlign="End" text="Credit Limit" showColon="true"
                       class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
            <HBox>
                <Label width="120px" textAlign="End" text="Current Order" showColon="true"
                       class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
            <HBox>
                <Label width="120px"  textAlign="End"
                       text="Enable Unit Price" showColon="true" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <Switch state="{Header/EnableUnitPrice}" change="onUnitPriceEnable"/>
            </HBox>
            <HBox>
                <Label width="120px" textAlign="End" text="Balance Credit" showColon="true"
                       class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
        </VBox>
        <!-- 4th Column -->
        <VBox alignItems="Start" justifyContent="Start">
            <HBox >
                <Label width="120px" textAlign="End" text="Total Order Quantity" showColon="true"
                       class="sapUiTinyMarginEnd sapUiTinyMarginTop labelWrap"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
            <HBox visible="{purchaseOrder>/Header/EnableUnitPrice}">
                <Label width="120px" textAlign="End" text="VAT Amount" showColon="true"
                       class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
            <HBox visible="{purchaseOrder>/Header/EnableUnitPrice}">
                <Label width="120px" textAlign="End" text="Total Amount Excluding VAT"
                       class="sapUiTinyMarginTop labelWrap" showColon="true"/>
                <mdc:Field  placeholder="" required="true" editMode="Display" />
            </HBox>
            <HBox visible="{purchaseOrder>/Header/EnableUnitPrice}">
                <Label width="120px" textAlign="End" text="Total Amount Including VAT"  
                       class="sapUiTinyMarginTop labelWrap" showColon="true"/>
                <mdc:Field  placeholder="" required="true" editMode="Display"/>
            </HBox>
        </VBox>
    </layout:Grid>

        </f:SimpleForm>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Delete" type="Reject" icon="sap-icon://delete" />
                <Button text="Save" type="Accept" icon="sap-icon://accept" />
            </Toolbar>
        </footer>

    </Page>
</mvc:View>
