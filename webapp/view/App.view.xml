<mvc:View controllerName="decathlon.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <App id="app" >
    
   <Page showHeader="true" id="appPage">
   <customHeader>
             <Bar design="Header" id="appPage1" >
              <contentLeft>
                <Image  src="../img/lt_logo.webp" class="image1"/>
              </contentLeft>
 
              <contentLeft>
                <Title  text="SPORTS" />
              </contentLeft>
 
              <contentRight>
                <Button icon="sap-icon://question-mark" tooltip="Help" press="onPressHelp" >
                <dependents>
			      <core:Fragment fragmentName="decathlon.view.Help" type="XML" />
	    	    </dependents>
            </Button>
                <Button icon="sap-icon://heart-2" tooltip="Wishlist" press="onPressWishlist" /> 
                <Button icon="sap-icon://cart"  tooltip="Cart" press="onPressCart"/>                       
              </contentRight>
            </Bar>   
            </customHeader>     
            <NavContainer id="nav"/>
        </Page>
    </App>
</mvc:View>