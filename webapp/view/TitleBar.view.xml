<mvc:View controllerName="decathlon.controller.TitleBar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

  <Bar class="bar" design="Header">
              <contentLeft>
                <Image  src="../img/logo1.webp" class="image1"/>
              </contentLeft>
 
              <contentLeft>
                <Title  text="SPORTS" />
              </contentLeft>
 
              <contentRight>
                <Button icon="sap-icon://question-mark" tooltip="Help" type="Transparent" press="onPressHelp" />
                 <Button icon="sap-icon://heart-2" tooltip="Wishlist" type="Transparent" press="onPressWishlist" /> 
                <Button icon="sap-icon://cart" tooltip="Cart" press="onPressCart" />
              </contentRight>
            </Bar>          
         
</mvc:View>